<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:orientation="horizontal"
        android:padding="5dip">

        <LinearLayout
            android:id="@+id/llThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dip"
            android:layout_marginRight="5dip"
            android:padding="3dip">

            <ImageView
                android:id="@+id/ivListImage"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:contentDescription="@string/artist_name" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/llThumbnail"
            android:layout_toEndOf="@+id/llThumbnail"
            android:layout_toRightOf="@+id/llThumbnail"
            android:textColor="#040404"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="sans"
            tools:text="Beat It" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTrackName"
            android:layout_marginTop="1dip"
            android:layout_toEndOf="@+id/llThumbnail"
            android:layout_toRightOf="@+id/llThumbnail"
            android:textColor="#343434"
            android:textSize="12sp"
            tools:text="Michael Jackson" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tvTrackName"
            android:layout_marginEnd="5dip"
            android:layout_marginRight="5dip"
            android:gravity="end"
            android:textColor="#10bcc9"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="5.45" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:contentDescription="@string/right" />

    </RelativeLayout>
</layout>